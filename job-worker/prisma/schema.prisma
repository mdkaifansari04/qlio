generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String
  password String
  jobs     Jobs[]
}

model Jobs {
  id        String    @id @default(uuid())
  command   String
  status    JobStatus @default(PENDING)
  exitCode  Int?
  signal    String?
  startedAt DateTime?
  endedAt   DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    String
  params    String[]
  priority  Int
  timeout   Int
  output    Json      @default("[]")
  retries   Int       @default(0)
  user      User      @relation(fields: [userId], references: [id])
}

enum JobStatus {
  PENDING
  RUNNING
  SUCCESS
  FAILED
  CANCELED
}
